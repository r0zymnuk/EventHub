#See https://aka.ms/customizecontainer to learn how to customize your debug container and how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:7.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:7.0 AS build
WORKDIR /src
COPY ["EventHub.Auth/EventHub.Auth.csproj", "EventHub.Auth/"]
COPY ["EventHub.Domain/EventHub.Domain.csproj", "EventHub.Domain/"]
COPY ["EventHub.Infrastructure/EventHub.Infrastructure.csproj", "EventHub.Infrastructure/"]
COPY ["EventHub.Application/EventHub.Application.csproj", "EventHub.Application/"]
RUN dotnet restore "EventHub.Auth/EventHub.Auth.csproj"
COPY . .
WORKDIR "/src/EventHub.Auth"
RUN dotnet build "EventHub.Auth.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "EventHub.Auth.csproj" -c Release -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
CMD ASPNETCORE_URLS=http://*:$PORT dotnet EventHub.Auth.dll